extend ../layout

block content
  .container
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th 用户姓名
            th 创建时间
            th 用户角色
            th 查看
            th 修改
            th 删除
        tbody
          each item in users
            tr(class="item-id-#{item._id}")
              td #{item.name}
              td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
              td #{item.role == 0 ? '一般用户' : (item.role == 20 ? '普通管理员' : '超级管理员')}
              td: a(target="_blank", href="/admin/updateUser?id=#{item._id}") 查看
              td: a(target="_blank", href="/admin/updateUser?id=#{item._id}") 修改
              td
                button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
